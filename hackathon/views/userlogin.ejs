<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Enhanced Login Page' %></title> <!-- Dynamic Title -->
    <!-- Link to Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        <!-- Show flash messages or errors if any -->
        <% if (messages && messages.length > 0) { %>
            <div class="alert">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }) %>
            </div>
        <% } %>

        <form action="/userlogin" method="POST"> 
            <!-- Username field with icon and label -->
            <label for="username"><i class="fas fa-user"></i> Username</label>
            <div class="input-container">
                <input type="text" id="username" name="username" placeholder="Enter your username" value="<%= username || '' %>" required>
            </div>

            <!-- Password field with icon and label -->
            <label for="password"><i class="fas fa-lock"></i> Password</label>
            <div class="input-container">
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>


            <!-- Submit button -->
            <input type="submit" value="Login">
        </form>

        <!-- Forgot password link -->
        <div class="login-footer">
            <p>Forgot your password? <a href="/forgot-password">Click here</a></p>
        </div>
    </div>
</body>
</html>

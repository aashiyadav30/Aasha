<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- Link to Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="/css1/forgot-password.css">
</head>
<body>
    <div class="forgot-password-container">
        <h2>Forgot Password</h2>

        <!-- Email input form -->
        <form id="email-form">
            <label for="email"><i class="fas fa-envelope"></i> Enter your Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email address" required>
            <input type="submit" value="Send OTP">
        </form>

        <!-- OTP input form (hidden by default) -->
        <form id="otp-form" style="display: none;">
            <h3>Enter OTP</h3>
            <div class="otp-inputs">
                <input type="text" maxlength="1" class="otp-block" required>
                <input type="text" maxlength="1" class="otp-block" required>
                <input type="text" maxlength="1" class="otp-block" required>
                <input type="text" maxlength="1" class="otp-block" required>
                <input type="text" maxlength="1" class="otp-block" required>
                <input type="text" maxlength="1" class="otp-block" required>
            </div>
            <input type="submit" value="Verify OTP">
        </form>
        
        <!-- Back to login link -->
        <div class="back-to-login">
            <p>Remember your password? <a href="/login">Back to Login</a></p>
        </div>
    </div>

    <script>
        // Handle the email form submission
        document.getElementById('email-form').addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent the form from submitting normally
            // Here you would typically send the email to the server for OTP generation
            document.getElementById('email-form').style.display = 'none'; // Hide the email form
            document.getElementById('otp-form').style.display = 'block'; // Show the OTP form
        });

        // Handle the OTP input focus
        const otpBlocks = document.querySelectorAll('.otp-block');
        otpBlocks.forEach((block, index) => {
            block.addEventListener('input', function() {
                if (this.value.length === 1 && index < otpBlocks.length - 1) {
                    otpBlocks[index + 1].focus(); // Move to the next block
                } else if (this.value.length === 0 && index > 0) {
                    otpBlocks[index - 1].focus(); // Move to the previous block
                }
            });
        });
    </script>
</body>
</html>

            </div>
        </div>
    </div>

    <!-- Slider Controls Row at the Bottom of the Page -->
    <div class="slider-controls-row">
        <!-- Slider Controls positioned to the bottom of the page -->
        <div class="slider-controls">
            <button id="prev">⬅</button>
            <button id="next">➡</button>
        </div>
    </div>

    <script>
        const slider = document.querySelector('.bottom-blocks');
        const blocks = document.querySelectorAll('.block');
        let scrollAmount = 0;
        const blockWidth = blocks[0].offsetWidth + 30; // Width of one block + margin
    
        document.getElementById('next').addEventListener('click', () => {
            scrollAmount -= blockWidth;
            if (Math.abs(scrollAmount) >= blockWidth * (blocks.length - 6)) {
                scrollAmount = -blockWidth * (blocks.length - 6); // Prevent scrolling beyond the last block
            }
            slider.style.transform = `translateX(${scrollAmount}px)`; // Corrected template literal
        });
    
        document.getElementById('prev').addEventListener('click', () => {
            scrollAmount += blockWidth;
            if (scrollAmount > 0) {
                scrollAmount = 0; // Prevent scrolling beyond the first block
            }
            slider.style.transform = `translateX(${scrollAmount}px)`; // Corrected template literal
        });
    </script>
    
</body>

</html>